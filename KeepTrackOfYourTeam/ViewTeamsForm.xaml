<Window x:Class="KeepTrackOfYourTeam.ViewTeamsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepTrackOfYourTeam"
        mc:Ignorable="d"
        Title="ViewTeamsForm" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dataGridTeams" HorizontalAlignment="Left" Height="327" Margin="51,38,0,0" VerticalAlignment="Top" Width="246" SelectionChanged="dataGridTeams_SelectionChanged"/>
        <Button HorizontalAlignment="Left" Margin="337,75,0,0" VerticalAlignment="Top" Width="75">
            <Button Name="buttonAddATeam" Content="Add a Team" Width="75" Click="buttonAddATeam_Click"/>
        </Button>
        <Button Name="buttonEditTeam" Content="Edit a Team" HorizontalAlignment="Left" Margin="337,104,0,0" VerticalAlignment="Top" Width="75" Click="buttonEditTeam_Click"/>
        <Button Name="buttonDeleteTeam" Content="Delete a Team" HorizontalAlignment="Left" Margin="337,129,0,0" VerticalAlignment="Top" Width="75" Click="buttonDeleteTeam_Click"/>

    </Grid>
</Window>
