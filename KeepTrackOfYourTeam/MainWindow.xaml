<Window x:Class="KeepTrackOfYourTeam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepTrackOfYourTeam"
        mc:Ignorable="d"
        Title="Keep Track Of Your Team Application" Height="450" Width="800">
    <Grid Margin="0,0,0,-21">
        <Button Content="Add new team" Height="30" HorizontalAlignment="Left" Margin="21,40,0,349" Width="100" Click="AddATeam_Click"/>
        <Button Content="Add a Player" Height="30" HorizontalAlignment="Left" Margin="126,40,0,349" Width="100" Click="AddAPlayer_Click"/>
        <Button Content="View teams" Height="30" HorizontalAlignment="Left" Margin="231,40,0,349" Width="100" Click="ViewTeams_Click"/>
        <Button Content="Exit" Height="30" HorizontalAlignment="Left" Margin="10,364,0,25" Width="100" Click="Exit_Click"/>

    </Grid>
</Window>
